;///////////////////////////////////////////////////////////////////////////////
;/                                                                             /
;/ Syntax: randomize {@seed.l}                                                 /
;/                                                                             /
;/ Description:                                                                /
;/ * no description available *                                                /
;/                                                                             /
;/ Inputs:                                                                     /
;/ - seed.l    : ???                                                           /
;/                                                                             /
;///////////////////////////////////////////////////////////////////////////////
Statement randomize{@seed.l}
If seed.l = -1 Then seed = eclock_Read{$FFFF}
!rand_Randomize{seed}
End Statement

CNIF #__include=0
randomize{}
For n.l=0 To 50
  NPrint rand{-50,50}
Next
Delay_ 300
End
CEND
