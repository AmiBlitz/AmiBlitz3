;///////////////////////////////////////////////////////////////////////////////
;/                                                                             /
;/ Syntax: !decompose_dest                                                     /
;/                                                                             /
;/ Description:                                                                /
;/ Help macros for 32bit functions                                             /
;/                                                                             /
;/ decompose the destination pixel into R G B                                  /
;/     ; decompose dest                                                        /
;/                                                                             /
;///////////////////////////////////////////////////////////////////////////////
Macro decompose_dest
    ; decompose dest
    MOVE.l (a1),d0
    MOVE.l d0,d6
    AND.l #%11111111,d6 : MULU.l d7,d6
    MOVE.l d6,_dR
    LSR.l #8,d0
    MOVE.l d0,d6
    AND.l #%11111111,d6 : MULU.l d7,d6
    MOVE.l d6,_dG
    LSR.l #8,d0
    AND.l #%11111111,d0 : MULU.l d7,d0
    MOVE.l d0,_dB

End Macro

