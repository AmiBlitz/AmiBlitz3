    LSR.l #8,d0
    MOVE.l d0,d6
    AND.l #%11111111,d6 : MULU.l d7,d6 : LSR.l #8,d6 : ADD.l muloff,d6
    MOVE.l d6,_sG
    LSR.l #8,d0
    AND.l #%11111111,d0 : MULU.l d7,d0 : LSR.l #8,d0 : ADD.l muloff,d0
    MOVE.l d0,_sB

End Macro

