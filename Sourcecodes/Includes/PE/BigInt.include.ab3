Statement bigint_Int2Big{x.l,*a.bigint}
  DEFTYPE.l ul
  DEFTYPE.l i
  DEFTYPE.l

  If *a=0
    error{"bigint_Int2Big: The passed variable was not initialized."}
    Statement Return
  EndIf
  ul = x
  *a\zahl[#PREC_DIGITS-1] = ul & $0000FFFF
  *a\zahl[#PREC_DIGITS-2] = (ul & $FFFF0000) LSR 16
  If x < 0
    ul = $0000FFFF
  Else
    ul = $00000000
  EndIf
  For i = 0 To #PREC_DIGITS - 3
    *a\zahl[i] = ul
  Next i
End Statement


