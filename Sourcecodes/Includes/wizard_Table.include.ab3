  Repeat
    ev = WaitEvent
    If ev = #IDCMP_CLOSEWINDOW
      WZ_KillTable{"TABELLE"}
      WZCloseWindow WZID("WIN_TABELLE")
      mkt = True
    Else
      dummy = WZ_CheckTableEvent{ev}
    EndIf
  Until mkt
End Macro


