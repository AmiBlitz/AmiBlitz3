;/                                                                             /
;/ Inputs:                                                                     /
;/ - filename.s : complete filename                                            /
;/ - path.s     : path                                                         /
;/                                                                             /
;/ Result:                                                                     /
;/ - result.s   : filename without path                                      /
;/                                                                             /
;/ Example:                                                                    /
;/ NPrint dos_RemPath{"Work:MySamples/Gunshots/gun.wav","Work:MySamples"}      /
