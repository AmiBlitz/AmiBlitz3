;/                                                                             /
;/ Description:                                                                /
;/ * no description available *                                                /
;/                                                                             /
;/ Inputs:                                                                     /
;/ - filename.s    : ???                                                       /
;/                                                                             /
;/ Result:                                                                     /
;/ - result.l     : ???                                                        /
;/                                                                             /
;///////////////////////////////////////////////////////////////////////////////
Function.l tui_write_windef {filename.s}
succ.l = False
dos.l = file_Open {filename.s,#file_forcewrite}
If dos>=0
  header.l = @"WDEF"
  If file_WriteMem {dos,&header.l,4}
    If win_WriteCache{dos}
      succ.l = True
    End If
  End If
  file_Close{dos}
End If
Function Return succ
End Function

