Statement tui_freegtlist {win.l}
SHARED tuidat()
If Peek.l(Addr GTList(win))
  DetachGTList win
  For tuiobj.l = 0 To #max_tuigads-1
    Select tuidat(win,tuiobj)\typ
      Case #tobj_string
        If \visible
          *gad.Gadget = GTGadPtr(win,tuiobj)
          If *gad Then *gad\GadgetRender=\view_yo
        End If

      Case #tobj_numstring
        If \visible
          *gad.Gadget = GTGadPtr(win,tuiobj)
          If *gad Then *gad\GadgetRender=\view_yo
        End If

    End Select
