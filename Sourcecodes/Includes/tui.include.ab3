;/ Description:                                                                /
;/ * no description available *                                                /
;/                                                                             /
;/ Inputs:                                                                     /
;/ - tuiobj.l    : ???                                                         /
;/ - modulo.l    : ???                                                         /
;/ - child1.l    : ???                                                         /
