size.l
str.b
End NEWTYPE

CNIF @#STR_USEPOOLED=0
#STR_USEPOOLED    = 0
CEND
#STR_SIZEOFHEADER = 5
#STR_DATAOFFSET   = 4

XINCLUDE "useful.include.ab3"

CNIF #STR_USEPOOLED
SHARED str_MemPoolHeader.l
str_MemPoolHeader = CreatePool_(0,32768,32768)
CEND

;///////////////////////////////////////////////////////////////////////////////
