Function.tuiMenuItem ntui_MenuItem{text.s,@image.s,@shortcut.s,@onSelect.s,@help.s,@flags.l,@nameID.s}
If flags=#TUI_NOFLAGS Then flags=0
flags | #TUIF_LEFT|#TUIF_MIDDLE|#TUIF_FIXHEIGHT|#TUIF_WANTMOVER|#TUIF_FIXWIDTH
*menuItem_.tuiMenuItem = (.tuiMenuItem)_ntui_CreateObject{#TUICLASS_MENUITEM,SizeOf.tuiMenuItem,help,flags,nameID}
If *menuItem_
  *engine.tuiEngine        = *menuItem_\obj\tuiEngine
  *menuItem_\subTuiWin      = Null
  *menuItem_\link_          = Null
  *menuItem_\tbi            = Null
  *menuItem_\amiga_         = Null
  *menuItem_\alt            = Null
  *menuItem_\ctrl           = Null
  *menuItem_\shift          = Null
;  *menuItem_\masterTuiWin   = tuiGlobal\buildHelper\tuiRootWin
  *menuItem_\subClassID     = #TUIMENU_ITEM
  *menuItem_\obj\borderType = #TUIBORDER_TOOL
  *menuItem_\shortqual      = 0
  *menuItem_\shortkey       = 0
  *menuItem_\shortcut       = Null
  str_Write{&*menuItem_\onSelect\notifyID,onSelect}
;  *menuItem_\obj\margin\left = 0,0,0,0
  str_Write{&*menuItem_\obj\string,text}
  If image Then *menuItem_\tbi = ntui_CreateTBImage{*menuItem_\obj\tuiEngine,image,#TUISIZE_INLINE,#TUISIZE_INLINE}

  !_GetFuncPointer{*menuItem_\obj\Draw            ,_ntui_DrawMenuItem,{0,0,0}}
  !_GetFuncPointer{*menuItem_\obj\Layout          ,_ntui_LayoutMenuItem,{0,0,0}}
  !_GetFuncPointer{*menuItem_\obj\DispatchEvent   ,_ntui_DispatchMenuItemEvent,{0,0}}
  !_GetFuncPointer{*menuItem_\obj\CalculateMinSize,_ntui_CalculateMenuItemMinSize,{0,0}}
  !_GetFuncPointer{*menuItem_\obj\Deinit          ,_ntui_DeinitMenuItem,{0}}
  !_GetFuncPointer{*menuItem_\obj\SetAttr         ,_ntui_SetMenuItemAttr,{0,0,0}}
  !_GetFuncPointer{*menuItem_\obj\GetAttr         ,_ntui_GetMenuItemAttr,{0,0,0}}
  *menuItem_\onSelect\callback = *menuItem_\obj\tuiEngine\defaultNotifyCallback
  If shortcut Then _ntui_SetMenuItemAttr{*menuItem_,#TUIMIA_SHORTCUT,&shortcut}
End If
Function Return *menuItem_
End Function

