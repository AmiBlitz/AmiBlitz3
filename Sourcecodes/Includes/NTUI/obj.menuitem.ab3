  classID.l = ntui_RegisterClass{"menutitle",(.tuiFunc)*ntui_BeginMenuTitle,(.tuiFunc)*ntui_EndMenu}

  ntui_RegisterAttr{classID,"image"         , #TUIMIA_IMAGE        ,#TUIAT_STRING , 0,0 }
