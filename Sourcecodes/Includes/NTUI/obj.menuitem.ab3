  classID.l = ntui_RegisterClass{"dropdown",(.tuiFunc)*ntui_BeginDropDown,(.tuiFunc)*ntui_EndMenu}

  ntui_RegisterAttr{classID,"image"         , #TUIMIA_IMAGE        ,#TUIAT_STRING , 0,0 }
