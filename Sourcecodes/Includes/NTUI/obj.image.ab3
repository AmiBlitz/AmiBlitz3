#TUI_HAS_IMAGE = 1

CNIF #__include=0
optimize 7
Syntax 2
CEND

#TUIIA_BASE = #TUIA_USER

#TUIIA_IMAGE = #TUIIA_BASE + 0

NEWTYPE.tuiImage
obj.tuiObject
*tbi.tuiTBImage
End NEWTYPE


_ntui_SetImageAttr:
Function.w _ntui_SetImageAttr{*image.tuiImage,ti_Tag.l,ti_Data.l}
  !_ASSERT{*image}
  !_ASSERT{*image\obj\classID=#TUICLASS_IMAGE}

  done.w = True
  Select ti_Tag
    Case #TUIIA_IMAGE
      If *image\tbi Then ntui_FreeTBImage{*image\tbi}
      *image\tbi = ntui_CreateTBImage{*image\obj\tuiEngine,Peek.s(ti_Data),#TUISIZE_NATIVE,#TUISIZE_NATIVE}
    Case #TUIA_XMLATTR
      *xmlA.tuiXmlAttr = ti_Data
      Select Peek.s(*xmlA\nameP)
        Case "src"             : done=ntui_SetAttr{*image,#TUIIA_IMAGE         ,*xmlA\stringP}
        Default
          done = False
       End Select
    Default
      done=False

  End Select
  Function Return done
End Function


_ntui_GetImageAttr:
Function.w _ntui_GetImageAttr{*image.tuiImage,ti_Tag.l,*ti_Data.longP}
!_ASSERT{*image}
!_ASSERT{*image\obj\classID=#TUICLASS_IMAGE}

done.w = True
Select ti_Tag
  Case #TUIBA_IMAGE      : *ti_Data\l = *image\tbi
  Default
    done=False

End Select
Function Return done
End Function



