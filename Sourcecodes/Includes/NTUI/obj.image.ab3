;/                                                                             /
;/ Description:                                                                /
;/ * calculate the minimum size for the Image */                               /
;/                                                                             /
;/ Inputs:                                                                     /
;/ - *image.tuiImage    : ???                                               /
;/ - *rp.RastPort    : ???                                                     /
;/                                                                             /
;/ Result:                                                                     /
;/ - result.l     : ???                                                        /
;/                                                                             /
;///////////////////////////////////////////////////////////////////////////////
_ntui_CalculateImageMinSize:
Statement _ntui_CalculateImageMinSize{*image.tuiImage,*rp.RastPort}
  !_ASSERT{*image}
  !_ASSERT{*rp}
  !_ASSERT{*image\obj\classID=#TUICLASS_IMAGE}

  *tuiEngine.tuiEngine = *image\obj\tuiEngine
  *tui.tuiObject = *image\obj
  !_ASSERT{*tuiEngine}

  *image\obj\minsize\x = *image\obj\padding\left + *image\obj\padding\right
  *image\obj\minsize\y = *image\obj\padding\top  + *image\obj\padding\bottom

  If *image\tbi
    *image\obj\minsize\x + ntui_GetTBImageWidth {*image\tbi}
    *image\obj\minsize\y + ntui_GetTBImageHeight{*image\tbi}
  End If

  _ntui_GetBorderSize{*tuiEngine,*image\obj\borderType,*image\obj\flags,*image\obj\border}
  *image\obj\minsize\x + *image\obj\border\left + *image\obj\border\right
  *image\obj\minsize\y + *image\obj\border\top  + *image\obj\border\bottom

End Statement


