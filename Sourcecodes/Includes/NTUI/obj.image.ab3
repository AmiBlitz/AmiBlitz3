;///////////////////////////////////////////////////////////////////////////////
;/                                                                             /
;/ Syntax: result.l = ntui_Image {imagefile.s,@help.s,@flags.l,userID.l}       /
;/                                                                             /
;/ Description:                                                                /
;/ * create an image tui Image */                                              /
;/                                                                             /
;/ Inputs:                                                                     /
;/ - imagefile.s    : ???                                                      /
;/ - help.s    : ???                                                           /
;/ - flags.l    : ???                                                          /
;/ - userID.l    : ???                                                         /
;/                                                                             /
;/ Result:                                                                     /
;/ - result.l     : ???                                                        /
;/                                                                             /
;///////////////////////////////////////////////////////////////////////////////
Function.tuiImage ntui_Image{imagefile.s,@tuiWidth.l,@tuiHeight.l,@help.s,@flags.l,@nameID.s}
If (flags=#TUI_NOFLAGS) Then flags=0
flags | #TUIF_CENTER|#TUIF_MIDDLE|#TUIF_FIXSIZE
*image.tuiImage = (.tuiImage)_ntui_CreateObject{#TUICLASS_IMAGE,SizeOf.tuiImage,help,flags,nameID}
If *image
;  *image\obj\bindFlags  = #TUIBIND_ABLE
  *image\tbi            = ntui_CreateTBImage{*image\obj\tuiEngine,imagefile,tuiWidth,tuiHeight}
  *image\obj\borderType = #TUIBORDER_NONE

  !_GetFuncPointer{*image\obj\Draw            ,_ntui_DrawImage,{0,0,0}}
;  !_GetFuncPointer{*image\obj\Layout          ,_ntui_LayoutImage,{0,0,0}}
  !_GetFuncPointer{*image\obj\DispatchEvent   ,_ntui_DispatchImageEvent,{0,0}}
  !_GetFuncPointer{*image\obj\CalculateMinSize,_ntui_CalculateImageMinSize,{0,0}}
  !_GetFuncPointer{*image\obj\Deinit          ,_ntui_DeinitImage,{0}}
  !_GetFuncPointer{*image\obj\SetAttr         ,_ntui_SetImageAttr,{0,0,0}}
  !_GetFuncPointer{*image\obj\GetAttr         ,_ntui_GetImageAttr,{0,0,0}}

End If
Function Return *image
End Function


