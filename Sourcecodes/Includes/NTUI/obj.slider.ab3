;///////////////////////////////////////////////////////////////////////////////
;/                                                                             /
;/ Syntax: result.l = ntui_VSlider {value.l,minValue.l,maxValue.l,@notify.l,:: /
;/ @help.s,@flags.l,@userID.l}                                                 /
;/                                                                             /
;/ Description:                                                                /
;/ Create function for tuiSlider.                                         /
;/                                                                             /
;/ Inputs:                                                                     /
;/ - value.l    : ???                                                          /
;/ - minValue.l    : ???                                                       /
;/ - maxValue.l    : ???                                                       /
;/ - notify.l    : ???                                                         /
;/ - help.s    : ???                                                           /
;/ - flags.l    : ???                                                          /
;/ - userID.l    : ???                                                         /
;/                                                                             /
;/ Result:                                                                     /
;/ - result.l     : ???                                                        /
;/                                                                             /
;///////////////////////////////////////////////////////////////////////////////
Function.tuiSlider ntui_VSlider{value.l,minValue.l,maxValue.l,@label.s,@onChange.s,@help.s,@flags.l,@nameID.s}
If (flags=#TUI_NOFLAGS) Then flags=0
flags | #TUIF_CENTER|#TUIF_MIDDLE |#TUIF_FIXWIDTH|#TUIF_WANTTAB
*slider.tuiSlider = (.tuiSlider)_ntui_CreateObject{#TUICLASS_SLIDER,SizeOf.tuiSlider,help,flags,nameID}
If *slider
  If minValue>maxValue Then x.l=minValue:minValue=maxValue:maxValue=x
  _ntui_UpdateSlider{*slider,value,minValue,maxValue,False}
  *slider\step_          = 1
  *slider\knobSize\x     = *slider\obj\engine\defSize[#TUISIZE_KNOB],*slider\obj\engine\defSize[#TUISIZE_KNOB]
  *slider\obj\padding\left    = 0,0,0,0
  If label Then str_Write{&*slider\obj\string,label}
  *slider\orientation    = #TUIORIENT_VERTICAL
  *slider\obj\borderType = #TUIBORDER_NONE
  str_Write{&*slider\onChange,onChange}

  !_GetFuncPointer{*slider\obj\Draw            ,_ntui_DrawSlider,{0,0,0}}
;  !_GetFuncPointer{*slider\obj\Layout          ,_ntui_LayoutSlider,{0,0,0}}
  !_GetFuncPointer{*slider\obj\DispatchEvent   ,_ntui_DispatchSliderEvent,{0,0}}
  !_GetFuncPointer{*slider\obj\CalculateMinSize,_ntui_CalculateSliderMinSize,{0,0}}
  !_GetFuncPointer{*slider\obj\Deinit          ,_ntui_DeinitSlider,{0}}
  !_GetFuncPointer{*slider\obj\SetAttr         ,_ntui_SetSliderAttr,{0,0,0}}
  !_GetFuncPointer{*slider\obj\GetAttr         ,_ntui_GetSliderAttr,{0,0,0}}
  *slider\onChange\callback = *slider\obj\engine\defaultNotifyCallback

End If
Function Return *slider
End Function


