;/ Syntax: result.l = ntui_HSlider {value.l,minValue.l,maxValue.l,@notify.l,:: /
;/ @help.s,@flags.l,@userID.l}                                                 /
;/                                                                             /
;/ Description:                                                                /
;/ * create function for tui Slider */                                         /
;/                                                                             /
;/ Inputs:                                                                     /
;/ - value.l    : ???                                                          /
;/ - minValue.l    : ???                                                       /
;/ - maxValue.l    : ???                                                       /
;/ - notify.l    : ???                                                         /
;/ - help.s    : ???                                                           /
;/ - flags.l    : ???                                                          /
;/ - userID.l    : ???                                                         /
;/                                                                             /
;/ Result:                                                                     /
;/ - result.l     : ???                                                        /
;/                                                                             /
;///////////////////////////////////////////////////////////////////////////////
Function.tuiSlider ntui_HSlider{value.l,minValue.l,maxValue.l,@label.s,@onChange.s,@help.s,@flags.l,@nameID.s}
*slider.tuiSlider = ntui_VSlider{value,minValue,maxValue,label,onChange,help,flags,nameID}
If *slider
  *slider\orientation = #TUIORIENT_HORIZONTAL
  *slider\obj\flags   = (*slider\obj\flags| #TUIF_FIXSIZE) - #TUIF_FIXWIDTH
End If
Function Return *slider
End Function




