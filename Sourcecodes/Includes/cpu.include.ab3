Function.s GetEmuText {emu.b}
Select emu
  Case #emu_none
    a.s = "real"
  Case #emu_uae
    a.s = "UAE"
  Case #emu_amithlon
    a.s = "Amithlon"
  Case #emu_amigaxl
    a.s = "AmigaXL"
  Default
    a.s = "unknown"
End Select
Function Return a.s
End Function


;///////////////////////////////////////////////////////////////////////////////
;/                                                                             /
;/ Syntax:  result.l = GetFPUFlags {}                                          /
;/                                                                             /
;/ Description:                                                                /
;/ * no description available *                                                /
;/                                                                             /
;/ Result:                                                                     /
;/ - result.l     : ???                                                        /
;/                                                                             /
;///////////////////////////////////////////////////////////////////////////////
Function.l GetFPUFlags {}
flags.l = 0
!getfpcr_x {flags}
Function Return flags
End Function

;///////////////////////////////////////////////////////////////////////////////
;/                                                                             /
;/ Syntax: SetFPUFlags {@flags.l}                                              /
;/                                                                             /
;/ Description:                                                                /
;/ * no description available *                                                /
;/                                                                             /
;/ Inputs:                                                                     /
;/ - flags.l    : ???                                                          /
;/                                                                             /
;///////////////////////////////////////////////////////////////////////////////
Statement SetFPUFlags {@flags.l}
If flags=-1 Then flags = 0
!setfpcr_x {flags}
End Statement

