cpu.b = GetCPU {}
fpu.b = GetFPU {}
emu.b = GetEmu {}
NPrint "You are running ",GetEmuText{emu}," on a ",GetCPUText{cpu}," with ",GetFPUText{fpu}
Delay_ 200
End
CEND


