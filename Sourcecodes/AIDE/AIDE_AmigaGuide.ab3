  pft_AddItem{*pftg,"endnode" ,"The end of a node. Example: @endnode"}
  pft_AddItem{*pftg,"font"    ,"Specifies the font to use, specified by name and size. Example: @font safalra.font 12"}
  pft_AddItem{*pftg,"height"  ,"Specifies the height (in rows) of the largest node. This information is not currently used by Amigaguide. Example: @height 42"}
  pft_AddItem{*pftg,"help"    ,"Specifies the node to be displayed when the user clicks the ‘Help’ button. Example: @help \\22A helpful node\\22"}
  pft_AddItem{*pftg,"index"   ,"Specifies the node to be displayed when the user clicks the ‘Index’ button. Example: @index \\22The index node\\22"}
  pft_AddItem{*pftg,"master"  ,"The name of the master copy of this amigaguide document. This information is not currently used by Amigaguide. Example: @master \\22Documents:Amigaguide/safalra.guide\\22"}
  pft_AddItem{*pftg,"node"    ,"The start of a node, followe by a name and title. The title is displayed in Amigaguide’s title bar, and the name is used to identify the node. Example: @node \\22Node name\\22 \\22Node title\\22"}
  pft_AddItem{*pftg,"rem"     ,"A comment that is not displayed. Example: @rem Amigaguide won't display this"}
  pft_AddItem{*pftg,"remark"  ,"A comment that is not displayed. Example: @remark Amigaguide won't display this"}
  pft_AddItem{*pftg,"width"   ,"Specifies the width (in columns) of the largest node. This information is not currently used by Amigaguide. Example: @width 78"}

  ; node level tags
  pft_AddItem{*pftn,"font"    ,"The same as the global font command, but only effects this node. Example: @font safalra.font 12"}
  pft_AddItem{*pftn,"help"    ,"The same as the global help command, but only effects this node. Example: @help \\22A helpful node\\22"}
  pft_AddItem{*pftn,"index"   ,"The same as the global index command, but only effects this node. Example: @index \\22The index node\\22"}
  pft_AddItem{*pftn,"keywords","The keywords for this node. This information is not currently used by Amigaguide. Example: @keywords Torquay \\22English Riviera\\22 Devon \\22Fawlty Towers\\22"}
  pft_AddItem{*pftn,"next"    ,"The next node, displayed when the user clicks the ‘Browser >’ button. This defaults to the next node in the document source. Example: @next \\22The next node\\22"}
  pft_AddItem{*pftn,"prev"    ,"The previous node, displayed when the user clicks the ‘< Browser’ button. This defaults to the previous node in the document source. Example: @prev \\22The previous node\\22"}
  pft_AddItem{*pftn,"title"   ,"Specifies the title of this node. This overrides the title specified in the @node tag. Example: @title \\22Node title\\22"}
  pft_AddItem{*pftn,"toc"     ,"The contents page, displayed when the user clicks the ‘Contents’ button. This defaults to the main node. Example: @toc \\22A contents node\\22"}

  ; inline tags
  help.s = "Specifies a hypertext link to open in a new window. Non-local links are specifed using the path to the amigaguide file, followed by / and the node name."
  help.s + "A line number can also be specified. Example: @{\\22Link text\\22 alink \\22local node\\22 7}"
  help.s + "Note: deprecated since V39"
  pft_AddItem{*pfti,"alink"   ,help}
  pft_AddItem{*pfti,"bg"      ,"Specifies the background colour to use from the next character onwards. Valid values are back, background, fill, filltext, highlight, shadow, shine’and text. Example: @{bg background}"}
  pft_AddItem{*pfti,"close"   ,"Closes this window. This is used in combination with @{alink}. Example: @{\\22Back to previous node\\22 close} Note: depracted since V39"}
  pft_AddItem{*pfti,"fg"      ,"Specifies the text colour to use from the next character onwards. Valid values are back, background, fill, filltext, highlight, shadow, shine’and‘text. Example: @{fg text}"}
  help.s = "Specifies a hypertext link to another node. Non-local links are specifed using the path to the amigaguide file, followed by / and the node name. A line number can also be specified."
  help.s + "Example: @{\\22Link text\\22 link \\22Documents:Amigaguide/safalra.guide/non local node name\\22 12}"
  pft_AddItem{*pfti,"link"    ,help}
  pft_AddItem{*pfti,"rx"      ,"Specifies a hypertext link that executes an ARexx script. Example: @{\\22Execute a script\\22 rx \\22script.rexx\\22}"}
  pft_AddItem{*pfti,"rxs"     ,"Specifies a hypertext link that executes an ARexx string. Example: @{\\22Execute a string\\22 rxs \\22Say 'hello'\\22}"}
  pft_AddItem{*pfti,"system"  ,"Specifies a hypertext link that executes an AmigaDOS command. Example: @{\\22Format DF0: now\\22 system \\22Format DF0:\\22}"}
  pft_AddItem{*pfti,"quit"    ,"Specifies a hypertext link that closes Amigaguide. Example: @{\\22Close Amigaguide\\22 quit} Note: deprecated since V39"}

  ; global V39
  pft_AddItem{*pftg,"wordwrap","Wraps paragraphs without linefeeds. Example: @wordwrap"}
  pft_AddItem{*pftg,"xref"    ,"Specifies other amigaguide documents to refer to. Example: @xref \\22Documents:Amigaguide/safalra.guide\\22"}

  ; node level V39
  pft_AddItem{*pftn,"embed"   ,"Embeds a text document withing this node. Example: @embed \\22Documents:Text/speech.txt\\22"}
  pft_AddItem{*pftn,"proportional","Specifies that a proportional font is used for this node. Example: @proportional"}
  pft_AddItem{*pftn,"wordwrap","The same as the global @wordwrap command, but only effects this node. Example: @wordwrap"}

  ; inline V39
  pft_AddItem{*pfti,"b"       ,"Turns on bold text. Example: @{b}"}
  pft_AddItem{*pfti,"beep"    ,"Specifies a hypertext link that makes a ‘beep’ sound when clicked. Example: @{\\22Click me to beep\\22 beep}"}
  pft_AddItem{*pfti,"guide"   ,"Specifies a hypertext link to another amigaguide document. Example: @{\\22Another amigaguide document\\22 guide \\22Document:Amigaguides/safalra.guide\\22}"}
  pft_AddItem{*pfti,"i"       ,"Turns on italic text. Example: @{i}"}
  pft_AddItem{*pfti,"u"       ,"Turns on underlined text. Example: @{u}"}
  pft_AddItem{*pfti,"ub"      ,"Turns off bold text. Example: @{ub}"}
  pft_AddItem{*pfti,"ui"      ,"Turns off italic text. Example: @{ui}"}
  pft_AddItem{*pfti,"uu"      ,"Turns off underlined text. Example: @{uu}"}

