  If winstatus(#_winMemory2) AND (dowin = 1 OR dowin = -1) AND (Peek.l(Addr Window(#_winMemory2)) >< 0)
    Use Window #_winMemory2
    num = 1
    DrawMem{num}
  EndIf

  dowin = -1
End Statement

