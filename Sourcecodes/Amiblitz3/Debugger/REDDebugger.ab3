  For h = 1 To num
    a$  = Edit$(256)
    typ = Val(Mid$(a$,3,5))
    skp = typ-prev
    If h > 1 Then Poke.w memadr-2,skp

    prev = typ

    Select Val(Mid$(a$,17,3))

      Case 1
        typ = 1

      Case 2
        typ = 2

      Case 4
        typ = 3

      Default
        typ = 0
    End Select

    a$ = Mid$(a$,22)
    b$ = LCase$(a$)

