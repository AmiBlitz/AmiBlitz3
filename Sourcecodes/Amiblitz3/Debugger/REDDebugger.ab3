;i=code line to grab
.getsyntax:
  syntax_$ = ""
  If i
    toke.w   = Peek.w(getad{i}+Peek.w(i+4))
    ;toke.w   = Peek.w(Peek.l(i)+Peek.w(i+4))
    tokead.l = token_addr
    toke = toke AND $7fff
    While (tokead <> 0 AND toke <> -1)
      If Peek.w(tokead+4) = toke
        syntax_$ = Peek.s(tokead+6)
        syntax_$+" "+Peek.s(tokead+7+Len(syntax_$))
        toke = -1
      EndIf
      tokead = Peek.l(tokead)
    Wend
  EndIf
  Gosub syntaxprint
Return


