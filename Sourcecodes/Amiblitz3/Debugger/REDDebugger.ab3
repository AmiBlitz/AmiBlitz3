  If Peek.w(ad) = $4e41
    ad+2
    a = typ
    If a
      ad2 = breakpoint_adr
      num = 0
      While Peek.l(ad2) <> 0
        If Peek.l(ad2) = ad
          Poke.l ad2,0
        Else
          ad2+8
          num+1
        EndIf
      Wend

      Poke.l ad2,ad
      Poke.w ad2+4,a
      If a = #break_simple Then b = 1 Else b = 0
      Poke.w ad2+6,b
      flag = -1
    EndIf
  EndIf
Return


