Statement d_quit{}
SHARED stepcnt,task,signalset,dstatus

  If dstatus <> #STOPPED
    !d_call{1}
    stepcnt = 0
    Delay_ 2
  EndIf
  ; quit the debugger
  !d_call{6}
  stepcnt+1
  Signal_ task,signalset
