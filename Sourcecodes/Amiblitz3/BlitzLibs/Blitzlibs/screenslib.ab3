._screen:
  SUB.l a0,a0
_screen2:                 ;a6=intuilib, a3=screen item, a0=bitmap, a1=intuifontlib
  MOVE.l a3,0(a5,d6)      ;set used screen!
  MOVE.l (a1),d7

  MOVEM.l d1/d7/a0,-(a7)
  BSR freescreen
  MOVEM.l (a7)+,d1/d7/a0
;
  LEA newscreen(pc),a1
  MOVE.l d7,16(a1)        ;NewScreen\*Font
;
  LEA newscreen(pc),a1
  MOVE -(a2),(a1)         ;NewScreen\LeftEdge
  MOVE -(a2),2(a1)        ;NewScreen\TopEdge
;
  MOVE -(a2),d0
  ADD #15,d0
  AND #$fff0,d0
  MOVE d0,4(a1)           ;NewScreen\Width ;simon was here
;
  MOVE -(a2),6(a1)        ;NewScreen\Height
  MOVE -(a2),8(a1)        ;NewScreen\Depth
  MOVE d1,12(a1)          ;NewScreen\ViewModes
  MOVE.w d1,newmodes+2
  TST.w 8(a1)
  BNE 'ok1
    MOVE.l d1,newmodes
 'ok1:
  MOVE.l -(a2),d1
  MOVE.b d3,10(a1)        ;NewScreen\DetailPen
  MOVE.b d4,11(a1)        ;NewScreen\BlockPen
  MOVE.l a0,28(a1)        ;NewScreen\*CustomBitMap

  MOVE.l d2,d0:ALibJsr $cf01
  MOVE.l d0,20(a1)        ;NewScreen\*DefaultTitle
;
  MOVEQ #15,d0
  TST.l 28(a1):BEQ 'skip
    MOVEQ #$4f,d0
 'skip:
  OR defstype(pc),d0
  MOVE d0,14(a1)          ;NewScreen\Type
;
  CLR.l interleave
  CMP.w #8,8(a1)
  BLE 'no24
    MOVE.l #-1,interleave
    TST.l cgxbase
    BEQ 'no24
      CMP.w #9,8(a1)
      BNE 'n1
        MOVE.w #8,8(a1)
     'n1
      MOVEM.l a1/a6,-(a7)
      MOVE.l cgxbase,a6
      LEA cgxtags,a0
      MOVEQ #0,d0
      MOVE.w 4(a1),d0
      MOVE.l d0,4(a0)
      MOVE.w 6(a1),d0
      MOVE.l d0,12(a0)
      MOVE.w 8(a1),d0
      MOVE.l d0,20(a0)
      JSR -$3c(a6)              ; d0 = BestCModeIDTagList_( a0 = Taglist)
      MOVE.l d0,newmodes
      MOVEM.l (a7)+,a6/a1
 'no24
  MOVE.l a1,a0
  JSR _OpenScreen(a6)
  MOVE.l d0,(a3)
  BEQ 'out
    MOVE.l d0,a0
    MOVE.l #"bLtZ",342(a0)      ;Screen\*UserData
 'out
RTS


.freescreen:;a3=screen to free, a6=intuilib, a2=graphics lib
            ;d6=maxslib, d7=memacclib

MOVE.l (a3),d0
BEQ 'done
  MOVE.l d0,a0
  CMP.l #"bLtZ",342(a0)
  BNE 'done2    ;don't close non Blitzscreens
    MOVE.l 22(a0),d0
    MOVE.l d0,-(a7)
    MOVE.l (a3),a0
    JSR _CloseScreen(a6)
    TST.l d0
    BEQ 'dones
      MOVE.l (a7)+,d0
      ALibJsr $cf02
      MOVE.l 4(a3),d0
      BEQ 'nobuff
        MOVE.l d0,a1
        MOVE.l a2,a6        ; graphicsbase to A6
        JSR -$3cc(a6)       ; FreeDBufInfo_ (V39!!)
        CLR.l4(a3)
     'nobuff
 'done2:
  CLR.l (a3)
'done:
 MOVEQ #-1,d0
RTS

'dones
  MOVE.l (a7)+,d0
  MOVEQ #0,d0
RTS

.dowbscreen:          ;convert WB into a Screen for us.
  BSR freescreen
  LEA SizeOf.IntuitionBase\FirstScreen(a6),a0
 'loop:
    MOVE.l (a0),d0 : BEQ err8
    MOVE.l d0,a0
    MOVE 20(a0),d0
    AND #15,d0
  CMP #1,d0
  BNE 'loop
  ;
  ;Got WorkBench
  ;
  MOVE.l a0,(a3)
  MOVE.l a3,0(a5,d6)
RTS

.dofstoscreen:
  MOVEQ #0,d1:;no title

.dofindscreen:    ;d1=titlename (or 0)
  MOVE.l a3,0(a5,d6):MOVE.l d1,d7:BSR freescreen
  LEA SizeOf.IntuitionBase\FirstScreen(a6),a0
 'loop:
      MOVE.l (a0),d0:BEQ noscreen
      MOVE.l d0,a0
      TST.l d7:BEQ 'done
      MOVE.l 22(a0),d0
    BEQ 'loop
    MOVE.l d0,a1
    MOVE.l d7,a2
   'loop2:
      TST.b (a2):BEQ 'done
      CMPM.b (a1)+,(a2)+
    BEQ 'loop2
    MOVE.l 26(a0),d0
  BEQ 'loop
  MOVE.l d0,a1
  MOVE.l d7,a2
 'loop3:
  TST.b (a2)
  BEQ 'done
    CMPM.b (a1)+,(a2)+
  BEQ 'loop3
