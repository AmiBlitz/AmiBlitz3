romrevision:Dc 0

AJL_0_A38:                    ;NewCloseScreen
  MOVE.l (A3),D0
  BEQ.w JL_0_A7A
    MOVEA.l D0,A0
    CMPI.l #$624C745A,$156(A0)
    BNE.w JL_0_A7A
      MOVE.l $16(A0),-(A7)
      MOVEA.l (A3),A0
      JSR -$42(A6)              ; CloseScreen_
      MOVEA.l (A7)+,A0
      TST.w D0
      BEQ.w JL_0_A7E
        MOVE.l A0,D0
        ALibJsr $cf02
        MOVE.l $4(A3),D0        ; Screen\*FirstWindow
        BEQ.w JL_0_A7A
          MOVEA.l D0,A1
          MOVEA.l A2,A6
          JSR -$3CC(A6)         ; FreeDBufInfo_
          CLR.l $4(A3)
  JL_0_A7A:
  CLR.l (A3)
  MOVEQ.l #$01,D0
  JL_0_A7E:
RTS

