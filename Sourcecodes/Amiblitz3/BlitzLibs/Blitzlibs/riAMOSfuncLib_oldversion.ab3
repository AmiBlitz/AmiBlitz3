sram:             Dc.l  0
shapeptr:         Dc.l  0
shaperam:         Dc.l  0
sdata:            Dc.l  0
numbershapes:     Dc.l  0
bytesperbitplane: Dc.l  0
bytespershape:    Dc.l  0
shapenumber:      Dc.l  0
pixwidth:         Dc.w  0
pixdepth:         Dc.w  0
pixheight:        Dc.w  0
