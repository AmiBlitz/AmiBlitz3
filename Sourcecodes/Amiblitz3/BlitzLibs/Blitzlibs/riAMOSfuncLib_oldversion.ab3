.FileSize
_filesize:
  MOVE.l d0,d6
  TST.l dosbase
  BNE skip3
  BSR dosopen
  TST.l d0
  BNE skip3
  BEQ dosnotopen
skip3:
  MOVE.l #2,d1
  MOVE.l #$80000000+2000,d2
  MOVE.l dosbase,a6
  JSR -228(a6)
  TST.l d0
  BEQ dosnotopen
  MOVE.l d0,fileinfoblock
  MOVE.l d6,d1
  MOVE.l #1005,d2
  CLR.l d0
  MOVE.l dosbase,a6
  JSR -84(a6)
  TST.l d0
  BEQ freedosobject
  MOVE.l d0,lock
  MOVE.l dosbase,a6
  MOVE.l lock,d1
  CLR.l d0
  MOVE.l fileinfoblock,d2
  JSR -102(a6)
  CLR.l d0
  MOVE.l lock,d1
  MOVE.l dosbase,a6
  JSR -90(a6)
  MOVE.l fileinfoblock,a0
  MOVE.l 124(a0),d0
  RTS

freedosobject:
  MOVE.l fileinfoblock,d2
