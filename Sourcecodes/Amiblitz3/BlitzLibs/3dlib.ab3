Statement BuildLookUpTables{}
; Builds all the look up tables
;
  SHARED SINTABLE(), COSTABLE()
  DEFTYPE.l angle
  DEFTYPE.f rad
  For angle=0 To 360
    rad = Pi*angle/180
    COSTABLE(angle)=Cos(rad)
    SINTABLE(angle)=Sin(rad)
  Next angle
End Statement

