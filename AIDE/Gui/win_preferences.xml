<!-- This is a comment -->

<window title="Preferences" id="win_preferences" onclose="CLOSE">
  <vgroup>
    <tabview tabstyle=2 value="0">
    <vgroup title="General" image="prefs">
      <space/>
     <imageview image="Gui/logo.png"/>
      <hgroup><space><label text="Icon Info"><toolbutton image="info" onclick="ev_prefs_wb_info"/></hgroup>
      <space/>
    </vgroup>
     
    <vgroup title="Editor" image="editor">
      <scrollview border="none">
        <vgroup>
        <hgroup wrap=2 fixheight="true">
        <label text="Font" align="right" bgpen="shine">
        <hgroup fixheight="true">
          <label text="..." id="obj_prefs_font" fixwidth="false"><button image="FONT" fixsize="true"/>
        </hgroup>
        <label text="Cursor Style" align="right" bgpen="shine">
        <hgroup fixheight="true">
          <radiobutton label="line"       id="obj_prefs_linecursor">
          <radiobutton label="bold line"  id="obj_prefs_boldlinecursor" bind="obj_prefs_linecursor"/>
          <radiobutton label="block"      id="obj_prefs_blockcursor" bind="obj_prefs_linecursor"/>
          <radiobutton label="underscore" id="obj_prefs_underscorecursor" bind="obj_prefs_linecursor"/>
        </hgroup>
        
        <label text="Blink Speed" align="right" bgpen="shine">
        <hgroup fixheight="true">
          <label text="faster"/>
          <hslider label="%d" minvalue="0" maxvalue="10" id="obj_prefs_blinkspeed" underlined="true"/>
          <label text="slower"/>
        </hgroup>

        </hgroup>
        <checkbutton label="Auto indent" id="obj_prefs_autoindent"/>
        <checkbutton label="Auto save before build" id="obj_prefs_autosave"/>
        <checkbutton label="Auto trim whitespaces" id="obj_prefs_autotrimwhitespaces"/>
        <checkbutton label="Free cursor movement" id="obj_prefs_freecursormovement"/>
        <checkbutton label="Highlight matching brackets" id="obj_prefs_highlightbrackets"/>
        <checkbutton label="Show return code" id="obj_prefs_showreturncode"/>
        <space/>
        </vgroup>
      </scrollview>
    </vgroup>
   
    <vgroup title="File Types" image="device" id="obj_prefs_filetypes_icon">
      <hgroup wrap=3 fixheight="false">
        <listview title="\pfilesource|\lFile Type" id="obj_prefs_doctype_list" ontouch="ev_prefs_doctype_list" onselect="ev_prefs_doctype_list"/>
        <vbalancer>
        <vgroup>
        <hgroup wrap=2 fixheight="true" id="obj_prefs_doctype_group">
          <label text="DOS Pattern"   bgpen="transparent" align="right"/><string id="obj_prefs_doctype_pattern"/>
          <label text="Default Icon"  bgpen="transparent" align="right"/><hgroup><string id="obj_prefs_doctype_icon"/><button fixsize=true image="FILE" id="obj_prefs_request_icon"/></hgroup>
          <label text="Tool"          bgpen="transparent" align="right"/><hgroup><string id="obj_prefs_doctype_tool"/><button fixsize=true image="FILE" id="obj_prefs_request_tool"/></hgroup>
          <label text="Work Path"     bgpen="transparent" align="right"/><hgroup><string id="obj_prefs_doctype_path"/><button fixsize=true image="PATH" id="obj_prefs_request_path"/></hgroup>
          <label text="Build Source"  bgpen="transparent" align="right"/><string id="obj_prefs_doctype_build_source"/>
          <label text="Debug Source"  bgpen="transparent" align="right"/><string id="obj_prefs_doctype_debug_source"/>
          <label text="SDK Path"      bgpen="transparent" align="right"/>
          <hgroup>
            <string id="obj_prefs_doctype_sdk_path"/>
            <button fixsize=true image="PATH" id="obj_prefs_request_path"/>
            <toolbutton image="refresh" id="obj_prefs_doctype_refresh_sdk" onclick="ev_prefs_doctype_refresh_sdk" help="Rebuild the help index of the SDK"/>
          </hgroup>
        </hgroup>
        <space fixheight="false"/>
        </vgroup>
      </hgroup>
   </vgroup>

    <vgroup title="NTUI" image="screen">
      <hgroup wrap="2" fixheight="true" title="NTUI Settings" image="prefs" border="none">     
        <label text="Screen" align="right"/><cycle options="Workbench|AIDE" id="obj_prefs_screenmode"/>
        <label text="Borders" align="right" /><cycle options="thin|thick" id="obj_prefs_borderstyle"/>
        <label text="Fill" align="right" /><cycle options="flat|gradient" id="obj_prefs_fillstyle"/>
      </hgroup>
      <space/>
    </vgroup>
   
    </tabview>
    <button label="Apply" image="use" onclick="ev_aide_prefs_apply" help="close the preferences"/>

  </vgroup>
</window>
