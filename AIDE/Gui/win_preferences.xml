<window title="Preferences" id="win_preferences" onclose="CLOSE">
  <vgroup>
    <tabview tabstyle=2 value="0">
    <vgroup title="General" image="prefs">
     <imageview image="Gui/logo.png"/>
    </vGroup>

    <vgroup title="Layer Manager" image="layer">     
<VGroup>

        <Scrollview>
          <VGroup id='NewLayerGroup' fixheight='True'>
<VGroup id='NewLayerGroup' fixheight='True'>

<HGroup fixheight='true'>
  <CustomView id='LayerView' border='flat' minheight='100' minwidth='100' fixsize='True' bgpen="shadow"/>
  <VGroup>
    <HGroup wrap='2' fixheight=True>
      <Label text='Name'    align='right'/><String />
      <Label text='Mode'    align='right'/> 
      <Cycle       id='LayerMode' options='Add|Alpha|Mul|Opaque|Sub|Trans' onChange='LayerMode' selected='0' help='set here the blitmode'/>
      <Label text='Density' align='right'/>
      <HGroup fixheight=true>
        <HSlider id='LayerDensity' value='0' minvalue='0' maxValue='255' onChange='LayerDensity' step='1' label="%d"/>
        <CheckButton image="helpoff|off" image2="help"/>
      </HGroup>
    </HGroup>
    <Space/>
  </VGroup>
</HGroup>  
<HSeperator/>

<HGroup fixheight='true'>
  <CustomView id='LayerView' border='flat' minheight='100' minwidth='100' fixsize='True'/>
  <VGroup>
    <HGroup wrap='2' fixheight=True>
      <Label text='Name'    align='right'/><String />
      <Label text='Mode'    align='right'/> 
      <Cycle       id='LayerMode' options='Add|Alpha|Mul|Opaque|Sub|Trans' onChange='LayerMode' selected='0' help='set here the blitmode'/>
      <Label text='Density' align='right'/>
      <HGroup fixheight=true>
        <HSlider id='LayerDensity' value='0' minvalue='0' maxValue='255' onChange='LayerDensity' step='1' label="%d"/>
        <CheckButton image="helpoff|off" image2="help"/>
      </HGroup>
    </HGroup>
    <Space/>
  </VGroup>
</HGroup>  
<HSeperator/>

<HGroup fixheight='true'>
  <CustomView id='LayerView' border='flat' minheight='100' minwidth='100' fixsize='True'/>
  <VGroup>
    <HGroup wrap='2' fixheight=True>
      <Label text='Name'    align='right'/><String />
      <Label text='Mode'    align='right'/> 
      <Cycle       id='LayerMode' options='Add|Alpha|Mul|Opaque|Sub|Trans' onChange='LayerMode' selected='0' help='set here the blitmode'/>
      <Label text='Density' align='right'/>
      <HGroup fixheight=true>
        <HSlider id='LayerDensity' value='0' minvalue='0' maxValue='255' onChange='LayerDensity' step='1' label="%d"/>
        <CheckButton image="helpoff|off" image2="help"/>
      </HGroup>
    </HGroup>
    <Space/>
  </VGroup>
</HGroup>  
<HSeperator/>

</VGroup>
<vgroup></vgroup>
</VGroup>
        </ScrollView>

        <HGroup fixsize='True'>
            <Toolbutton id='LayerAdd'    onClick='LayerAdd'     image='TBImages:layeradd'    help='added a new Layer'/>
            <Toolbutton id='LayerRemove' onClick='Layer_Remove' image='TBImages:layerremove' help='remove the actual Layer'/>
            <Space/>
        </HGroup>

</VGroup>

</VGroup>
     
     
     
   
     

    <vgroup title="Editor" image="editor">
      <scrollview border="none">
        <vgroup>
        <hgroup wrap=2 fixheight="true">
        <label text="Font" align="right" bgpen="shine">
        <hgroup fixheight="true">
          <label text="..." id="obj_prefs_font" fixwidth="false"><button image="FONT" fixsize="true"/>
        </hgroup>
        <label text="Cursor Style" align="right" bgpen="shine">
        <hgroup fixheight="true">
          <radiobutton label="line"       id="obj_prefs_linecursor">
          <radiobutton label="bold line"  id="obj_prefs_boldlinecursor" bind="obj_prefs_linecursor"/>
          <radiobutton label="block"      id="obj_prefs_blockcursor" bind="obj_prefs_linecursor"/>
          <radiobutton label="underscore" id="obj_prefs_underscorecursor" bind="obj_prefs_linecursor"/>
        </hgroup>
        
        <label text="Blink Speed" align="right" bgpen="shine">
        <hgroup fixheight="true">
          <label text="faster"/>
          <hslider label="%d" minvalue="0" maxvalue="10" id="obj_prefs_blinkspeed" underlined="true"/>
          <label text="slower"/>
        </hgroup>
        
        </hgroup>
        <checkbutton label="Auto indent" id="obj_prefs_autoindent"/>
        <checkbutton label="Auto trim whitespaces" id="obj_prefs_autotrimwhitespaces"/>
        <checkbutton label="Free cursor movement" id="obj_prefs_freecursormovement"/>
        <checkbutton label="Highlight matching brackets" id="obj_prefs_highlightbrackets"/>
        <space/>
        </vgroup>
      </scrollview>
    </vgroup>
   
    <vgroup title="File Types" image="device" id="obj_prefs_filetypes_icon">
      <hgroup wrap=3 fixheight="true">
        <listview title="\pfilesource|\lFile Type" id="obj_prefs_doctype_list" ontouch="ev_prefs_doctype_list"/>
        <vbalancer>
        <vgroup>
        <hgroup wrap=3 fixheight="true">
          <label text="Default Icon"  bgpen="transparent" align="right"/><string id="obj_prefs_doctype_icon"/><button fixsize=true image="FILE" id="obj_prefs_request_icon"/>
          <label text="Base Path"     bgpen="transparent" align="right"/><string id="obj_prefs_doctype_path"/><button fixsize=true image="PATH" id="obj_prefs_request_path"/>
          <label text="Build Source"  bgpen="transparent" align="right"/><string id="obj_prefs_doctype_build_source"/><toolbutton image="help" id="obj_prefs_doctype_help"/>
          <label text="Debug Source"  bgpen="transparent" align="right"/><string id="obj_prefs_doctype_debug_source"/><toolbutton image="help" id="obj_prefs_doctype_help"/>
          <label text="Scan Source"   bgpen="transparent" align="right"/><string id="obj_prefs_doctype_debug_source"/><toolbutton image="help" id="obj_prefs_doctype_help"/>
          <label text="Build Project" bgpen="transparent" align="right"/><string id="obj_prefs_doctype_build_project"/><toolbutton image="help" id="obj_prefs_doctype_help"/>
          <label text="Debug Project" bgpen="transparent" align="right"/><string id="obj_prefs_doctype_debug_project"/><toolbutton image="help" id="obj_prefs_doctype_help"/>
          <label text="Scan Project"  bgpen="transparent" align="right"/><string id="obj_prefs_doctype_scan_project"/><toolbutton image="help" id="obj_prefs_doctype_help"/>
          <label text="Scan SDK"      bgpen="transparent" align="right"/><string id="obj_prefs_doctype_scan_sdk"/><toolbutton image="help" id="obj_prefs_doctype_help"/>
          <label text="SDK Path"      bgpen="transparent" align="right"/><string id="obj_prefs_doctype_sdkpath"/><button fixsize=true image="PATH" id="obj_prefs_doctype_sdk_path"/>
        </hgroup>
        <hgroup><label text="Rebuild Help Index" align="right"/><toolbutton image="refresh" id="obj_prefs_doctype_refresh_sdk"/></hgroup>
        </vgroup>
      </hgroup>
      <space>
   </vgroup>
   
   
   
    </tabview>
    <button label="Apply" image="use" onclick="ev_aide_prefs_apply" help="close the preferences"/>

  </vgroup>
</window>
