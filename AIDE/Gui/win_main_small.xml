<!-- compact layout for small screens up to 800x600 -->
<window title="AIDE" id="win_main" onclose="ICONIFY">
  <vgroup>
  
    <vgroup id="holder_menu" fixheight="true">
    <!-- Menu -->
    </vgroup>
    
    <vgroup id="holder_toolbar" fixheight="true">
    <!-- ToolBar -->
    </vgroup>
    
    <hgroup>
    
      <vgroup id="holder_editor">
      <!-- Editor -->
      </vgroup>
      
      <vbalancer/>
      
      <tabview id="holder_browser" value="0">
      <!-- Browser -->
      </tabview>
      
    </hgroup>
    
    <hbalancer/>
    
    <vgroup id="holder_console">
    <!-- Console -->
    </vgroup>
    
  </vgroup>
</window>
