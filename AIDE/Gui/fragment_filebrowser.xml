<vgroup title="Files" image="file" border="none">
  <hgroup fixheight=true>
    <toolbutton image="favourites" onclick="ev_filelist_favorites" help="show favorite locations">
    <toolbutton image="harddisk" onclick="ev_filelist_showdrives" help="show all system drives">
    <toolbutton image="nav_west" onclick="ev_filelist_parentpath" help="go back to parent path">
    <string onchange="ev_filelist_refresh2" onsubmit="ev_filelist_refresh" id="obj_filelist_path"/>
    <toolbutton image="refresh" onclick="ev_filelist_refresh" help="refresh file lister">
  </hgroup>
  <listview title="\pfile\~|\^\l\tFilename\~|\^\rSize|\^\lDate\pdate" onselect="ev_filelist_select" id="obj_filelist"/>
  <hgroup fixheight=true>
    <toolbutton image="rename" onclick="ev_filelist_rename" help="rename a file or folder">
    <toolbutton image="delete" onclick="ev_filelist_delete" help="delete a file or folder">
    <toolbutton image="newdrawer" onclick="ev_filelist_newfolder" help="create new folder">
    <toolbutton image="info" onclick="ev_filelist_iconinfo" help="display wbinfo for icon">
    <string onsubmit="ev_filelist_setpattern" id="obj_filelist_pattern"/>
  </hgroup>
</vgroup>
