<vgroup title="" image="file" padding=0 id="obj_source_group" border="none">

  <hgroup>
    <textbox id="obj_source_text" bordertype="none" margin="0" scrollermode="always" undo="true" 
      onCursor="ev_source_cursor"
      onChange="ev_source_edited"
      autoindent="true"
      fix="true"
    />
  </hgroup>  
  
  <hgroup fixheight="true">
    <imageview image="align_left"/>
    <label text="-" align="left" id="obj_source_status" fixwidth="false"/>
    <label text="?" align="right" id="obj_source_dstatus"  fixwidth="false"/>
  </hgroup>
  
</vgroup>
