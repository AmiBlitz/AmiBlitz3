
<window title="Calculator" id="win_calculator" onclose="CLOSE">
  <vgroup>
    <vgroup title="Expression">
      <string onchange="ev_calculator_eval" help="type your constant expression to evaluate here"/>

      <hgroup>
        <radiobutton id="obj_calculator_hex" label="Hex" onclick="ev_calculator_hex" help="set output format to hexadecimal" checked="false"/>
        <radiobutton id="obj_calculator_dec" label="Dec" onclick="ev_calculator_dec" help="set output format to decimal" bind="obj_calculator_hex" checked="true"/>
        <radiobutton id="obj_calculator_bin" label="Bin" onclick="ev_calculator_bin" help="set output format to binary" bind="obj_calculator_hex" checked="false"/>
      </hgroup>

    </vgroup>
    <button label="Close" image="quit" onclick="CLOSE" help="close the calculator"/>
  </vgroup>
</window>
